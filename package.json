{
  "name": "easyedit",
  "description": "EasyEdit - A simple Markdown editor",
  "version": "1.2.5",
  "type": "module",
  "scripts": {
    "start": "concurrently \"vite --host\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "vite build",
    "electron:build": "npm run build && electron-builder"
  },
  "main": "main.cjs",
  "build": {
    "appId": "easyedit.gcclinux.github.com",
    "productName": "EasyEdit",
    "files": [
      "dist/**/*",
      "src/*",
      "about/*",
      "src/assets/*",
      "public/*",
      "screenshots/*",
      "index.html",
      "LICENSE",
      "package.json",
      "tsconfig.app.json",
      "tsconfig.json",
      "tsconfig.node.json",
      "vite.config.ts",
      "main.cjs"
    ],
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico",
      "fileAssociations": [
        {
          "ext": [
            "txt",
            "md",
            "html",
            "css"
          ],
          "description": "Markdown Files",
          "icon": "public/icon.ico"
        }
      ],
      "publisherName": "Ricardo Wagemaker",
      "legalTrademarks": "EasyEdit"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png",
      "category": "Development;TextEditor;Utility",
      "maintainer": "Ricardo Wagemaker",
      "description": "A lightweight Markdown editor built with Electron",
      "synopsis": "Simple Markdown editor",
      "desktop": {
        "Name": "EasyEdit",
        "Terminal": false,
        "Type": "Application",
        "Categories": "Development;TextEditor;Utility"
      },
      "artifactName": "EasyEdit-${version}-${arch}.AppImage",
      "fileAssociations": [
        {
          "ext": "txt",
          "description": "Text Files",
          "icon": "public/icon.png"
        },
        {
          "ext": "md",
          "description": "Markdown Files",
          "icon": "public/icon.png"
        },
        {
          "ext": "html",
          "description": "HTML Files",
          "icon": "public/icon.png"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "gcclinux",
      "repo": "EasyEdit",
      "channel": "latest",
      "private": true,
      "publishAutoUpdate": true,
      "updaterCacheDirName": "easyedit-updater",
      "vPrefixedTagName": false
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "darkModeSupport": true,
      "icon": "public/icon.png",
      "fileAssociations": [
        {
          "ext": "txt",
          "description": "Text Files",
          "icon": "public/icon.png"
        },
        {
          "ext": "md",
          "description": "Markdown Files",
          "icon": "public/icon.png"
        },
        {
          "ext": "html",
          "description": "HTML Files",
          "icon": "public/icon.png"
        }
      ]
    }
  },
  "author": "Ricardo Wagemaker <wagemra@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "detect-port": "^1.6.1",
    "electron-is-dev": "^3.0.1",
    "express": "^4.21.1",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.2",
    "lodash.debounce": "^4.0.8",
    "mermaid": "^11.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/file-saver": "^2.0.7",
    "@types/lodash.debounce": "^4.0.9",
    "@types/mermaid": "^9.1.0",
    "@types/node": "^22.8.1",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "globals": "^15.11.0",
    "vite": "^5.4.9",
    "wait-on": "^8.0.1"
  }
}
