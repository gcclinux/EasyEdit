{
  "name": "easyedit",
  "description": "EasyEdit - A simple Markdown editor",
  "version": "1.4.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "server": "vite --host --port 3024",
    "app": "concurrently \"vite\" \"wait-on http://localhost:3024 && electron .\"",
    "build": "tsc && vite build",
    "build:web": "tsc && vite build --config vite.config.web.ts",
    "electron:build": "npm run build && electron-builder && node renameArtifacts.cjs"
  },
  "main": "main.cjs",
  "build": {
    "appId": "EasyEdit",
    "productName": "EasyEdit",
    "files": [
      "dist/**/*",
      "src/*",
      "about/*",
      "release/*",
      "src/assets/*",
      "src/components/*",
      "src/templates/*",
      "src/autoGenerator/*",
      "public/*",
      "screenshots/*",
      "index.html",
      "LICENSE",
      "preload.js",
      "package.json",
      "tsconfig.app.json",
      "tsconfig.json",
      "tsconfig.node.json",
      "vite.config.ts",
      "main.cjs"
    ],
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "fileAssociations": [
        {
          "ext": [
            "txt",
            "md",
            "html"
          ],
          "description": "Markdown Files Editor",
          "icon": "public/icon.ico"
        }
      ],
      "legalTrademarks": "EasyEdit"
    },
    "linux": {
      "extraResources": [
        {
          "from": "build/linux/metainfo/easyedit.appdata.xml",
          "to": "usr/share/metainfo/easyedit.appdata.xml"
        },
        {
          "from": "public/easyedit.png",
          "to": "easyedit.png"
        }
      ],
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png",
      "category": "Development;TextEditor;Utility",
      "maintainer": "Ricardo Wagemaker",
      "description": "A lightweight Markdown editor built with Electron",
      "synopsis": "Simple Markdown editor",
      "artifactName": "EasyEdit-${version}-${arch}.${ext}",
      "fileAssociations": [
        {
          "ext": "txt",
          "description": "Text Files",
          "icon": "public/icon.png"
        },
        {
          "ext": "md",
          "description": "Markdown Files",
          "icon": "public/icon.png"
        },
        {
          "ext": "html",
          "description": "HTML Files",
          "icon": "public/icon.png"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "Ricardo Wagemaker",
      "repo": "EasyEdit",
      "channel": "latest",
      "private": true,
      "publishAutoUpdate": true,
      "updaterCacheDirName": "easyedit-updater",
      "vPrefixedTagName": false
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "darkModeSupport": true,
      "icon": "public/icon.png",
      "fileAssociations": [
        {
          "ext": "txt",
          "description": "Text Files",
          "icon": "public/icon.png"
        },
        {
          "ext": "md",
          "description": "Markdown Files",
          "icon": "public/icon.png"
        },
        {
          "ext": "html",
          "description": "HTML Files",
          "icon": "public/icon.png"
        }
      ]
    }
  },
  "author": "Ricardo Wagemaker <wagemra@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@twemoji/api": "^16.0.1",
    "crypto-js": "^4.2.0",
    "detect-port": "^2.1.0",
    "electron-is-dev": "^3.0.1",
    "express": "^5.1.0",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "lodash.debounce": "^4.0.8",
    "mermaid": "^11.12.0",
    "nomnoml": "^1.7.0",
    "plantuml-encoder": "^1.4.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark-emoji": "^5.0.2",
    "remark-gfm": "^4.0.1",
    "twemoji": "^14.0.2"
  },
  "devDependencies": {
    "@electron-forge/publisher-github": "^7.9.0",
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "@types/crypto-js": "^4.2.2",
    "@types/file-saver": "^2.0.7",
    "@types/lodash.debounce": "^4.0.9",
    "@types/mermaid": "^9.2.0",
    "@types/node": "^24.5.2",
    "@types/plantuml-encoder": "^1.4.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "concurrently": "^9.2.1",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "playwright": "^1.55.1",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1"
  }
}
